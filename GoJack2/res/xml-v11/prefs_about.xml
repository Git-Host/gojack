<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceScreen android:title="@string/about_"
		android:summary="@string/about_hint">
		<intent android:action="android.intent.action.MAIN"
			android:targetPackage="it.ciopper90.gojack2" android:targetClass="it.ciopper90.gojack2.AboutActivity" />
	</PreferenceScreen>
	<PreferenceScreen android:title="@string/feedback_"
		android:summary="@string/feedback_hint">
		<intent android:action="android.intent.action.VIEW"
			android:data="http://code.google.com/p/gojack/issues/list" />
	</PreferenceScreen>
	<PreferenceScreen android:title="@string/twitter_"
		android:summary="@string/twitter_hint">
		<intent android:action="android.intent.action.VIEW"
			android:data="http://twitter.com/ciopper90" />
	</PreferenceScreen>
</PreferenceScreen>
